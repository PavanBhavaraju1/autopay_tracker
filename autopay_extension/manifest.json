{
  "manifest_version": 3,
  "name": "AutoPay Tracker",
  "version": "1.0",
  "description": "Automatically saves subscriptions to your AutoPay dashboard",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "*://*/*checkout*", "*://*/*payment*", "*://*/*billing*",
        "*://*/*subscribe*", "*://*/*purchase*", "*://*/*cart*",
        "*://checkout.stripe.com/*", "*://www.paypal.com/checkout/*"
      ],
      "js": ["content.js"]
    }
  ]
}
